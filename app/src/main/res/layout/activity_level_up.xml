<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelUp"
    android:background="@drawable/back_intro">

    <ImageView
        android:id="@+id/lvlUpAvatar"
        android:layout_width="210dp"
        android:layout_height="282dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLvlUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ava0" />

    <Button
        android:id="@+id/btnLvlUp"
        android:layout_width="140dp"
        android:layout_height="81dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#FD7A542B"
        android:padding="15dp"
        android:text="Level Up"
        android:textSize="25dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:layout_width="357dp"
        android:layout_height="151dp"
        android:layout_marginBottom="40dp"
        android:background="#7AFF9800"
        app:layout_constraintBottom_toTopOf="@+id/lvlUpAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/lvlUpNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="25dp"
            android:text="Nome"
            android:textSize="27dp"/>

        <TextView
            android:id="@+id/lvlUpNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:text="999"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/lvlUpXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="200dp"
            android:text="999"
            android:textSize="35dp"/>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>