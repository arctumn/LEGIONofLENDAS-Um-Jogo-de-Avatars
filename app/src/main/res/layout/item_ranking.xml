<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#00000000"
    android:layout_margin="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#59ededed">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="#100"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/rnkNome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rnkAvatar"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:contentDescription="@string/avatar"
                    android:padding="10dp" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">


                       <TextView
                           android:id="@+id/rnkTxtNivel"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:textColor="@android:color/black"
                           android:text="LVL 100"
                           android:textSize="25sp"
                           android:padding="5dp"
                           android:textStyle="bold" />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal"
                       android:weightSum="2">
                       <TextView
                           android:id="@+id/user_win"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:textColor="@android:color/black"
                           android:textSize="25sp"
                           android:text="@string/won"
                           android:textStyle="bold" />
                       <TextView
                           android:id="@+id/user_loss"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:textColor="@android:color/black"
                           android:textSize="25sp"
                           android:text="@string/lost"
                           android:textStyle="bold" />
                   </LinearLayout>
               </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:layout_weight="0.75">
                    <TextView
                        android:id="@+id/user_str"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="@string/STR"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/user_magic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="@string/Magic"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/user_life"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="@string/HP"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/user_def"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="@string/Defence"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/user_magic_def"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="@string/Magic_Defence"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/user_xp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="@string/current_xp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>